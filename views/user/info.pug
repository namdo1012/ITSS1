doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Play game
  link(rel='stylesheet', href='/css/common.css')
  link(rel='stylesheet', href='/css/signUp.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x', crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4', crossorigin='anonymous')
  //- link(rel='stylesheet', type='text/css', href='./style.css')

include /navbar.pug

body 
  .sign-up-container
    .sign-up-title.game-title User info
    form()
      div.mb-3
        label(for="email") Email Address
        input#email.form-control(type='text', name= "email",readonly, value= email)

      div.mb-3
        label(for="password") Password
        input#password.form-control(type='password', name= "password", readonly, value=password)

      div.mb-3
        label(for="nick") Nickname
        input#nick.form-control(type='text', name= "nick", readonly, value=nick)

      a.btn.btn-primary.sign-up-btn(href= "/") Back