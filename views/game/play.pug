doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Play game
  link(rel='stylesheet', href='/css/common.css')
  link(rel='stylesheet', href='/css/play.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x', crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4', crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
  //- link(rel='stylesheet', type='text/css', href='./style.css')
include /navbar.pug
body

  .game-container
    .game-info
      .game-title Tetris Game
      .game-player Player: #{name}
    canvas#tetris(width='200' height='400')
    div.game-score
      | Score : 
      #score 0
    //- button#save-game-btn.btn.btn-primary(data-bs-toggle="modal", data-bs-target="#exampleModal") Save score
    button#save-game-btn.btn.btn-primary(type='button', data-bs-toggle='modal', data-bs-target='#exampleModal', onclick='handleShowModal()') Save
  #exampleModal.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Save game
          button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
        .modal-body
          form
            .mb-3
              label.col-form-label(for='name') Saved name:
              input#saved-name.form-control(type='text')
            .mb-3
              label.col-form-label(for='score1') Score:
              input#score1.form-control(type='text', readonly='')
        .modal-footer
          button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
          button.btn.btn-primary(type='button', onclick='handleSaveScore()') Save


  script(src='/js/tetrominoes.js')
  script(src='/js/tetris.js')
  script(src='/js/play.js')